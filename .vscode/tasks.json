{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build sfml project",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/main.exe",
        "-I${workspaceFolder}/libs/SFML-3.0.2/include",
        "-L${workspaceFolder}/libs/SFML-3.0.2/lib",
        "-lsfml-graphics-d",
        "-lsfml-window-d",
        "-lsfml-system-d"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
